html
  body
  .view-home

    .header
      img.logo.ng-enter(src="img/logo.png")

    .video-container
      .title Drag Files here
        img(src="cover/PersonofInterestS01E01.m4v.jpg")
      .video(ng-repeat="video in videos")

        .preview preview: {{ video | json }}
          img(src="PersonofInterestS01E01.m4v.jpg")
          .icone
            i.fa.fa-circle-o-notch.fa-spin
          .percent(ng-if="video.percent < 100") {{ video.percent }}
        .title {{ video.title }}

        .duration(ng-if="video.percent == 100") {{ video.duration }}

