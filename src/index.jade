doctype html
html
  head
    meta(charset="utf-8")
    meta(name="viewport", content="initial-scale=1, maximum-scale=1, user-scalable=no, width=device-width")

    title ClapNclip

    link(href="css/app.css", rel="stylesheet")
    script(src="https://cdn.socket.io/socket.io-1.3.4.js")
    script(src="http://cdn.binaryjs.com/0/binary.js")
    script(src="cordova.js")
    script(src="js/vendors.js")
    script(src="js/app.js")
    script(src="js/templates.js")

  body(ng-app="starter")

    .view-menu(ui-view="menu", ng-show="$root.menuIsOpen")

    .view-banner(ui-view="banner", ng-class="{ menuOpen: $root.menuIsOpen , menuClose: $root.menuIsOpen == false}")
    .view-uploader(ui-view="uploader", ng-class="{ menuOpen: $root.menuIsOpen , menuClose: $root.menuIsOpen == false}")
    .view-slider(ui-view="slider", ng-class="{ menuOpen: $root.menuIsOpen , menuClose: $root.menuIsOpen == false}")
    .view-footer(ui-view="footer", ng-class="{ menuOpen: $root.menuIsOpen , menuClose: $root.menuIsOpen == false}")
